#include <stdio.h>

int main()
{
    int n,m,i,j,k,y,alloc[20][20],max[20][20],ava[50],sq=0;
    printf("Enter the number of processes");
    scanf("%d",&n);
    printf("Enter the number of resources");
    scanf("%d",&m);
    printf("Enter the Allocation Matrix");
    
    for(i=0;i<n;i++){
        for(j=0;j<m;j++){
            scanf("%d",&alloc[i][j]);
        }
    }
    printf("Enter the Max Matrix");
    for(i=0;i<n;i++){
        for(j=0;j<m;j++){
            scanf("%d",&max[i][j]);
        }
    }
    printf("Enter the available matrix");
      for(i=0;i<m;i++){
          scanf("%d",&ava[i]);
      } 
    int finish[n],safe[n],work[m],need[n][m];
    for(i=0;i<n;i++){
        for(j=0;j<m;j++){
            need[i][j]=max[i][j] - alloc[i][j];        }
    }
    printf("The need Matrix");
    for(i=0;i<n;i++){
        printf("\n");
        for(j=0;j<m;j++){
            printf("%d ",need[i][j]);
        }
        
    }
    for(i=0;i<m;i++){
        work[i]=ava[i];
    }
    for(i=0;i<n;i++){
        finish[i]=0;
    }
    for(k=0;k<n;k++){
        for(i=0;i<n;i++){
            if(finish[i]==0){
                int flag=0;
                    for(j=0;j<m;j++){
                        if(need[i][j]>work[j]){
                            flag=1;
                            break;
                        }
                    }
                    if(flag=0){
                        safe[sq++]=i;
                        }
                            for(y=0;y<m;y++){
                                work[y]+=alloc[i][j];
                                finish[i];
                            }
                    
            }
        }
    }
    printf("\nFollowing is the Safe Sequence\n");
        for(i=0;i<n;i++){
            printf("p%d ",safe[i]);
        }
        
    
}
